<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jsconf.rocketlaptop.domain.admin.mapper.AdminMapper">

    <select id="findBySeq" resultType="com.jsconf.rocketlaptop.domain.member.model.Member">
        SELECT *
        FROM Member
        WHERE seq = #{seq}
        AND status = 'ACTIVE'
        AND role = 'ADMIN'
    </select>

    <select id="findByEmail" resultType="com.jsconf.rocketlaptop.domain.member.model.Member">
        SELECT *
        FROM Member
        WHERE email = #{email}
          AND status = 'ACTIVE'
          AND role = 'ADMIN'
    </select>

</mapper>
